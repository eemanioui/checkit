<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li>
        <a class="edit" href="/lists/<%= @list_id %>/edit">Edit List</a>
      </li>
    </ul>
  </header>
  
  <ul>
    <% @list[:todos].each_with_index do |todo, index| %>
      <li>
        <h3><%= todo[:name] %></h3>
        <form method="post" action="/lists/<%= @list_id %>/todos/<%= index %>/delete" class="delete">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% end %>
  </ul>
</section>


<form method="post" action="/lists/<%= @list_id %>/todos">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" placeholder="Something to do" type="text" value="<%= params[:todo] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>



<% content_for :header_links do %>
  <a class="list" href="/lists">All Lists</a>
<% end %> 
 